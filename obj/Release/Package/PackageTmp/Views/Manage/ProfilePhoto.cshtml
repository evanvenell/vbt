<div class="content">
    <div class="container-fluid">
        <div class="row">
            @using (Html.BeginForm("ProfilePhoto", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <!-- Custom CSS for Profile Photo Elements-->
                <style type="text/css">
                    .ProfControl-row {
                        display: grid;
                        grid-column-gap: 20px;
                        grid-row-gap: 20px;
                        grid-template-columns: auto auto;
                        background-color: transparent;
                        padding: 10px;
                    }

                    .ProfControl-item-title {
                        /*background-color: rgba(255, 255, 255, 0.8);*/
                        /*border: 1px solid rgba(0, 0, 0, 0.8);*/
                        padding: 10px;
                        /*font-size: 30px;*/
                        /*font-size: 21px;*/
                        text-align: left;
                    }

                    .ProfControl-item-text {
                        /*background-color: rgba(255, 255, 255, 0.8);*/
                        /*border: 1px solid rgba(0, 0, 0, 0.8);*/
                        padding: 10px;
                        /*font-size: 30px;*/
                        font-size: 17px;
                        text-align: center;
                    }
                </style>
                <!-- ./Custom CSS for Profile Photo Elements -->
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>Profile Picture</legend>
                    <div class="card">
                        <div class="card-primary">
                            <div class="card-header">
                                <h3 class="card-text">Set a new Photo for your Profile</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="card-text">
                                        <label for="profilePhoto" class="text-md">New Photo: (tip: Please select an image that us at least 100x100)</label>
                                    </div>
                                </div>
                                <div class="ProfControl-row">
                                    <div class="ProfControl-item-text">
                                        
                                        <input name="ProfilePhoto" id="profilePhoto" type="file" @*class="btn btn-default"*@ class="btn btn-default"/>
                                    </div>
                                    <p class="ProfControl-item-text">
                                        @*<input type="submit" value="Save Changes" />*@
                                        <input type="submit" value="Save Changes" class="btn btn-danger"/>
                                        @*@Html.ActionLink("Edit Profile Photo", "ProfilePhoto", "Manage", new { @class = "btn btn-warning" })*@
                                    </p>
                                </div>

                                <div class="col-lg-12">
                                    <div class="card-text">
                                        <label>Current Profile Picture:</label>
                                    </div>
                                    @using Microsoft.AspNet.Identity
                                    <img src="@Url.Action("Photo", "Manage", new { UserId = User.Identity.GetUserId() })">
                                </div>
                                @ViewBag.Message


                                @*<p>
                                <input type="submit" value="Save Changes" />
                            </p>*@
                            </div>
                        </div>
                    </div>



                </fieldset>
            }

        </div>
    </div>
</div>