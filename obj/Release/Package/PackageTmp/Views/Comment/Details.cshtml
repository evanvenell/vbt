@model BugTrackerApplication.Models.Comment

@{
    ViewBag.Title = "Details";
}

<!-- Content Header (Page Header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row md-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark" style="font-size: 40px; text-align: left;">Comment Details</h1>
                <!-- May add more detail here such as the clicked ticket ID next to the "Ticket Details" header element -->
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/Home/Index">Dashboard Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Ticket/Index">My Tickets</a>
                    </li>
                    <li class="breadcrumb-item active">Ticket Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Page Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-primary">
                        <!--<div class="card-header">
                            <h3 class="card-text">Details about this Ticket</h3>
                        </div>-->
                        <div class="card-header" style="background-color: #ffc107">
                            <h3 class="card-text">Comment: #@Html.DisplayFor(model => model.ID) </h3>
                            <h4 class="card-text" style="padding-left: 10px;">Belongs to Ticket: @Html.DisplayFor(model => model.TicketID)</h4>
                            <h5>
                                <!-- This control will be enabled based on the currently logged in users roles/permissions -EV 03/22/2021... -->
                                <!--Html.ActionLink("Edit", "Edit", new { id = Model.ID })   |-->
                                <!--Html.ActionLink("Back to Tickets", "Index")-->
                                <a href="@Url.Action("Delete", "Comment", new { id = Model.ID }, null)" class="btn btn-outline-secondary" style="color: #dc3545">Delete this Comment?</a>
                                <a href="@Url.Action("Details", "Ticket", new { id = Model.TicketID }, null)" class="btn btn-primary btn-lg">Back to Ticket: @Html.DisplayFor(model => model.TicketID) </a>
                            </h5>
                        </div>
                        <div class="card-body">

                            <div>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Ticket.TicketTitle)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Ticket.TicketTitle)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.CommentTitle)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.CommentTitle)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Commenter)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Commenter)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Message)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Message)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Created)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Created)
                                    </dd>

                                </dl>
                            </div>
                            <!--<p>
                                Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                                Html.ActionLink("Back to List", "Index")
                            </p>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
